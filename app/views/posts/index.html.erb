<div class="posts">
  <%= render partial: '/users/user', locals: { user: @user } %>
  <% @user.posts.each do |post| %>
    <div class="post-card">
      <h3 class="post-card-title"><%= link_to post.title, {controller: 'posts', action: "show", post_id: post.id} %></h2>
      <p class="post-card-text"><%= post.text %></p>
    </div>
    <div class="comments-card">
      <% post.recent_comments.each do |comment| %>
        <div class="comment-card">
          <h4 class="comment-header">Comments</h4>
          <p class="comment-card-text"><%= comment.author.name%>: <%= comment.text %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>